{
  "name": "saucedemo-automation",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:smoke": "npx playwright test --grep @smoke --project=chromium-user",
    "test:regression": "npx playwright test regression --project=chromium-user --workers=1",
    "test:critical": "npx playwright test --grep @critical --project=chromium-user",
    "test:login": "npx playwright test --grep @login --project=chromium-user",
    "test:checkout": "npx playwright test --grep @checkout --project=chromium-user",
    "test:cart": "npx playwright test --grep @cart --project=chromium-user",
    "test:inventory": "npx playwright test --grep @inventory --project=chromium-user",
    "test:session": "npx playwright test --grep @session --project=chromium-user",
    "test:negative": "npx playwright test --grep @negative --project=chromium-user",
    "test:validation": "npx playwright test --grep @validation --project=chromium-user",
    "test:edge": "npx playwright test --grep @edge --project=chromium-user",
    "generate-storage": "npx playwright test --project=chromium-user --workers=1",
    "lint": "eslint './**/*.{ts,js}' --ext .ts,.js || true",
    "format": "prettier --write './**/*.{ts,js,json,md}'",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.2",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^2.8.8"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
